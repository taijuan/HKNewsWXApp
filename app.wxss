.navigator-hover {
  /* color: blue; */
  opacity: 0.5;
}

.view-container {
  width: 100%;
  box-sizing: content-box;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.tab-container {
  /* overflow: hidden; */
  line-height: 72rpx;
  background: #fff;
  font-size: 32rpx;
  box-sizing: content-box;
  white-space: nowrap;
  position: fixed;
}

.tab-item {
  margin: 0 32rpx;
  display: inline-block;
}

.tab-item.active {
  color: #4675f9;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #4675f9;
  position: relative;
  border-radius: 16rrpx;
  bottom: 4rpx;
}

.page-view {
  width: 100%;
  /* background-color: red; */
  box-sizing: content-box;
  /* overflow:scroll; */
  margin-top: 72rpx;
}

.page-header {
  width: 750rpx;
  height: 422rpx;
}

.page-header-image {
  width: 750rpx;
  height: 422rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.load-more {
  font-size: 32rpx;
  color: grey;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  padding-bottom: 16rpx;
}

.image-item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin: 16rpx;
  box-sizing: content-box;
  border-radius: 16rpx;
  /* border-color: red; */
  border-width: 0rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #aaa;
  border-style: outset;
}

.image-view {
  width: 100%;
  height: 404rpx;
}

.image-name {
  padding: 16rpx;
  font-size: 28rpx;
  color: black;
}

.image-description {
  padding-left: 16rpx;
  padding-right: 16rpx;
  font-size: 24rpx;
  color: gray;
}

.image-publishTime {
  padding: 16rpx;
  font-size: 24rpx;
  color: blue;
}
